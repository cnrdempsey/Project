<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="conor.ie.dcu.multimeterapp.MainActivity"
    android:background="#403939">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/measurementButton"
        android:text="@string/startMeasurement"
        android:onClick="startMeasurement"
        android:layout_marginTop="81dp"
        android:checked="false"
        android:layout_below="@+id/measurementResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
        <!--android:thumb="@+drawable/switch_thumb"-->
        <!--android:track="@+drawable/switch_bg"-->

    <TextView
        android:id="@+id/measurementResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textColor="#2a8000"
        android:textSize="75sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/measurementButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/canvasFrame">

    </FrameLayout>


</RelativeLayout>